# Environment Configuration Template
# Copy this file to .env and update with your settings
# You can directly use to configure your application environment

# Device Configuration
DEVICE=cuda  # Options: cuda, mps, cpu
DEVICE_ID=0  # GPU device ID (for multi-GPU systems)

# Model Settings
MODEL_TYPE=DPT_Large  # Options: DPT_Large, DPT_Hybrid, MiDaS_small
MODEL_CACHE_DIR=./models

# Paths
INPUT_DIR=./data/input
OUTPUT_DIR=./data/output
LOG_DIR=./logs

# Processing Settings
BATCH_SIZE=8
NUM_WORKERS=4

# Logging
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_TO_FILE=true
